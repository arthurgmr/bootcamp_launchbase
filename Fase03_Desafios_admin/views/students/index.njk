{% extends "layout.njk" %}


{% block content %}

<div class="card table-container">
    <a href="/students/create">Novo Aluno</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Alunos</th>
                <th>E-mail</th>
                <th>Ano Escolar</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>
                <td>{{student.email}}</td>
                <td>{{student.educ_level}}</td>
                <td><a href="/students/{{student.id}}">Vizualizar</a></td>
            </tr>
            {% endfor %}
        </tbody>    
    </table>
</div>

{% endblock content %}