{% extends "layout.njk" %}


{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ student.birth }}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ student.email }}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if student.type == "M" else "Feminino" }}</div>
        </div>

        <div class="item">
            <div>Ano Escolar</div>
            <div>{{ student.educ_level }}</div>
        </div>       

        <div class="item">
            <div>Carga Hor√°ria Semanal</div>
            <div>{{ student.hours }} horas</div>
        </div>        

        <a href="/students/{{student.id}}/edit" class="button">Editar</a>       


    </section>
    

</div>

{% endblock content %}