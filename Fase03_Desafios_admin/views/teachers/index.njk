{% extends "layout.njk" %}


{% block content %}

<div class="card table-container">
    <a href="/teachers/create">Novo Professor</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Teachers</th>
                <th>Subjects</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td>{{teacher.subjects}}</td>
                <td><a href="/teachers/{{teacher.id}}">Vizualizar</a></td>
            </tr>
            {% endfor %}
        </tbody>    
    </table>
</div>

{% endblock content %}